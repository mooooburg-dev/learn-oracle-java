
public class MethodDemo {

	public static void main(String[] args) {
		
		drawBox();
		drawBox();
		drawBox();
	}

	// 메서드 정의 : 재사용 코드 단위 만들기
	private static void drawBox() {
		for (int y=0 ; y<10 ; y++) {
			for(int x=0 ; x<20 ; x++) {
				if( x == 0 || x == 19 || y == 0 || y ==9 ) {
					System.out.print("*");
				}
				else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
